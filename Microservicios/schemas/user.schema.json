{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://heartguard.io/schemas/user.json",
  "title": "User",
  "type": "object",
  "required": ["id", "email", "role", "organization_id"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-f0-9\-]{36}$"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "first_name": {
      "type": ["string", "null"],
      "maxLength": 120
    },
    "last_name": {
      "type": ["string", "null"],
      "maxLength": 120
    },
    "role": {
      "type": "string",
      "enum": ["admin", "manager", "user"]
    },
    "organization_id": {
      "type": "integer",
      "minimum": 1
    },
    "preferences": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "number", "boolean"]
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
