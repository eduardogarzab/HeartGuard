{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://heartguard.io/schemas/organization.json",
  "title": "Organization",
  "type": "object",
  "required": ["id", "name"],
  "properties": {
    "id": { "type": "integer", "minimum": 1 },
    "name": { "type": "string", "maxLength": 255 },
    "logo_url": { "type": ["string", "null"], "format": "uri" },
    "policies": { "type": ["string", "null"], "maxLength": 2000 },
    "contact_email": { "type": ["string", "null"], "format": "email" },
    "contact_phone": { "type": ["string", "null"], "maxLength": 40 },
    "settings": {
      "type": "object",
      "additionalProperties": { "type": ["string", "number", "boolean"] }
    },
    "updated_at": { "type": "string", "format": "date-time" }
  }
}
