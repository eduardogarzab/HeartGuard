# =========================================================
# Environment variables for Microservices
# =========================================================

# --- RabbitMQ Configuration ---
# Used for inter-service communication
RABBITMQ_HOST=rabbitmq
RABBITMQ_DEFAULT_PASS=change_me

# --- JWT Configuration ---
# Secret for signing JWTs. MUST be a long, random string.
JWT_SECRET=change-me

# --- Remote Backend Services Configuration ---
# IP address or hostname of the main backend instance
BACKEND_INSTANCE_HOST=127.0.0.1

# PostgreSQL connection details
POSTGRES_USER=heartguard_app
POSTGRES_PASSWORD=dev_change_me
POSTGRES_DB=heartguard
POSTGRES_PORT=5432

# InfluxDB connection details
INFLUX_HOST=127.0.0.1
INFLUX_PORT=8086
INFLUX_TOKEN=change_me
INFLUX_ORG=heartguard
INFLUX_BUCKET=heartguard

# --- Service Ports ---
# These are the internal ports for the microservices
GATEWAY_PORT=5000
AUTH_PORT=5001
ORGANIZATION_PORT=5002
USER_PORT=5003
PATIENT_PORT=5004
DEVICE_PORT=5005
INFLUX_SERVICE_PORT=5006
INFERENCE_PORT=5007
ALERT_PORT=5008
NOTIFICATION_PORT=5009
MEDIA_PORT=5010
AUDIT_PORT=5011

# --- Full URLs (constructed dynamically, no need to set manually if using the above) ---
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${BACKEND_INSTANCE_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
INFLUX_URL=http://${INFLUX_HOST}:${INFLUX_PORT}
