# Variables globales
GATEWAY_URL=http://gateway:5000
AUTH_URL=http://auth:5001
ORG_URL=http://organization:5002
USER_URL=http://user:5003
MEDIA_URL=http://media:5004
INFLUX_PROXY_URL=http://influx:5005
AUDIT_URL=http://audit:5006
INFLUX_URL=http://influxdb:8086
INFLUX_TOKEN=changeme-token
INFLUX_ORG=heartguard
INFLUX_BUCKET=org_default
GCS_BUCKET=heartguard-system
SERVICE_ACCOUNT_EMAIL=751259101579-compute@developer.gserviceaccount.com
# Ruta local al archivo JSON de credenciales. En la VM, actualizar al path real.
GOOGLE_APPLICATION_CREDENTIALS=/opt/heartguard/service-account.json

# Configuración Gateway
gateway_PORT=5000
gateway_JWT_SECRET=super-secret
gateway_ALLOWED_ORIGINS=https://admin.heartguard.io,https://app.heartguard.io
gateway_RATE_LIMIT=100/min
gateway_LOG_LEVEL=INFO
gateway_REDIS_URL=redis://redis:6379/0

# Configuración Auth Service
auth_PORT=5001
auth_JWT_SECRET=${gateway_JWT_SECRET}
auth_JWT_EXPIRES_IN=3600
auth_REFRESH_TOKEN_TTL=1209600
auth_DATABASE_URL=postgresql+psycopg2://heartguard:heartguard@postgres:5432/heartguard
auth_REDIS_URL=redis://redis:6379/1
auth_ALLOWED_ORIGINS=${gateway_ALLOWED_ORIGINS}
auth_LOG_LEVEL=INFO
auth_DEFAULT_ADMIN_EMAIL=admin@heartguard.io
auth_DEFAULT_ADMIN_PASSWORD=ChangeMe123!
auth_DEFAULT_ORG_NAME=HeartGuard

# Configuración Organization Service
organization_PORT=5002
organization_DATABASE_URL=${auth_DATABASE_URL}
organization_ALLOWED_ORIGINS=${gateway_ALLOWED_ORIGINS}
organization_LOG_LEVEL=INFO

# Configuración User Service
user_PORT=5003
user_DATABASE_URL=${auth_DATABASE_URL}
user_ALLOWED_ORIGINS=${gateway_ALLOWED_ORIGINS}
user_LOG_LEVEL=INFO

# Configuración Media Service
media_PORT=5004
media_DATABASE_URL=${auth_DATABASE_URL}
media_ALLOWED_ORIGINS=${gateway_ALLOWED_ORIGINS}
media_LOG_LEVEL=INFO
media_SIGNED_URL_TTL=900
media_MAX_UPLOAD_MB=5

# Configuración Influx Proxy
influx_PORT=5005
influx_ALLOWED_ORIGINS=${gateway_ALLOWED_ORIGINS}
influx_LOG_LEVEL=INFO
influx_DEFAULT_BUCKET=${INFLUX_BUCKET}

# Configuración Audit Service
audit_PORT=5006
audit_DATABASE_URL=${auth_DATABASE_URL}
audit_ALLOWED_ORIGINS=${gateway_ALLOWED_ORIGINS}
audit_LOG_LEVEL=INFO

# Postgres
POSTGRES_USER=heartguard
POSTGRES_PASSWORD=heartguard
POSTGRES_DB=heartguard
POSTGRES_PORT=5432

# Redis
REDIS_PORT=6379
