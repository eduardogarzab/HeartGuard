# =============================
# HeartGuard Microservices ENV
# =============================
# Copia este archivo a .env y reemplaza los valores de ejemplo antes de levantar docker-compose.

# ---- Credenciales globales ----
JWT_SECRET=please-generate-a-strong-secret
ALLOWED_ORIGINS=https://app.heartguard.com,https://admin.heartguard.com
LOG_LEVEL=INFO
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=ChangeMe123!

# ---- Base de datos relacional ----
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=heartguard
POSTGRES_USER=heartguard
POSTGRES_PASSWORD=super-strong-password

POSTGRES_URL_AUTH=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?options=-csearch_path%3Dauth
POSTGRES_URL_ORGANIZATION=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?options=-csearch_path%3Dorganization
POSTGRES_URL_USER=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?options=-csearch_path%3Duser_ctx
POSTGRES_URL_PATIENT=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?options=-csearch_path%3Dpatient
POSTGRES_URL_DEVICE=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?options=-csearch_path%3Ddevice
POSTGRES_URL_INFERENCE=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?options=-csearch_path%3Dinference
POSTGRES_URL_ALERT=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?options=-csearch_path%3Dalert
POSTGRES_URL_NOTIFICATION=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?options=-csearch_path%3Dnotification
POSTGRES_URL_MEDIA=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?options=-csearch_path%3Dmedia
POSTGRES_URL_AUDIT=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?options=-csearch_path%3Daudit

# ---- Mensajer√≠a y time-series ----
RABBITMQ_DEFAULT_PASS=replace-with-strong-pass
RABBITMQ_URL=amqp://heartguard:${RABBITMQ_DEFAULT_PASS}@rabbitmq:5672/heartguard
DOCKER_INFLUXDB_INIT_PASSWORD=replace-with-influx-password
INFLUX_URL=http://influxdb:8086
INFLUX_TOKEN=replace-with-influx-token
INFLUX_ORG=heartguard
INFLUX_BUCKET=heartguard_signals

# ---- Servicios HTTP ----
GATEWAY_PORT=5000
AUTH_PORT=5001
ORGANIZATION_PORT=5002
USER_PORT=5003
PATIENT_PORT=5004
DEVICE_PORT=5005
INFLUX_SERVICE_PORT=5006
INFERENCE_PORT=5007
ALERT_PORT=5008
NOTIFICATION_PORT=5009
MEDIA_PORT=5010
AUDIT_PORT=5011

# ---- Otros ----
GCS_BUCKET=heartguard-system
SERVICE_ACCOUNT_EMAIL=751259101579-compute@developer.gserviceaccount.com
GOOGLE_APPLICATION_CREDENTIALS=/run/secrets/gcp-sa.json
OTEL_EXPORTER_OTLP_ENDPOINT=
