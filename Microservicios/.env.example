# =============================
# HeartGuard Microservices ENV
# =============================
# Copia este archivo a .env y reemplaza los valores de ejemplo antes de levantar docker-compose.

# ---- Credenciales globales ----
JWT_SECRET=please-generate-a-strong-secret
ALLOWED_ORIGINS=https://app.heartguard.com,https://admin.heartguard.com
LOG_LEVEL=INFO
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=ChangeMe123!

# ---- Base de datos relacional (reutiliza la instancia del backend) ----
# Usa las credenciales reales del backend HeartGuard. Ejemplo local:
# BACKEND_DATABASE_URL=postgresql://hg_app:super-secret@host.docker.internal:5432/heartguard
BACKEND_DATABASE_URL=postgresql://user:password@localhost:5432/heartguard

POSTGRES_URL_AUTH=${BACKEND_DATABASE_URL}
POSTGRES_URL_ORGANIZATION=${BACKEND_DATABASE_URL}
POSTGRES_URL_USER=${BACKEND_DATABASE_URL}
POSTGRES_URL_PATIENT=${BACKEND_DATABASE_URL}
POSTGRES_URL_DEVICE=${BACKEND_DATABASE_URL}
POSTGRES_URL_INFERENCE=${BACKEND_DATABASE_URL}
POSTGRES_URL_ALERT=${BACKEND_DATABASE_URL}
POSTGRES_URL_NOTIFICATION=${BACKEND_DATABASE_URL}
POSTGRES_URL_MEDIA=${BACKEND_DATABASE_URL}
POSTGRES_URL_AUDIT=${BACKEND_DATABASE_URL}

# ---- Mensajer√≠a y time-series ----
RABBITMQ_DEFAULT_PASS=replace-with-strong-pass
RABBITMQ_URL=amqp://heartguard:${RABBITMQ_DEFAULT_PASS}@rabbitmq:5672/heartguard
DOCKER_INFLUXDB_INIT_PASSWORD=replace-with-influx-password
INFLUX_URL=http://influxdb:8086
INFLUX_TOKEN=replace-with-influx-token
INFLUX_ORG=heartguard
INFLUX_BUCKET=heartguard_signals

# ---- Servicios HTTP ----
GATEWAY_PORT=5000
AUTH_PORT=5001
ORGANIZATION_PORT=5002
USER_PORT=5003
PATIENT_PORT=5004
DEVICE_PORT=5005
INFLUX_SERVICE_PORT=5006
INFERENCE_PORT=5007
ALERT_PORT=5008
NOTIFICATION_PORT=5009
MEDIA_PORT=5010
AUDIT_PORT=5011

# ---- Otros ----
GCS_BUCKET=heartguard-system
SERVICE_ACCOUNT_EMAIL=751259101579-compute@developer.gserviceaccount.com
GOOGLE_APPLICATION_CREDENTIALS=/run/secrets/gcp-sa.json
OTEL_EXPORTER_OTLP_ENDPOINT=
