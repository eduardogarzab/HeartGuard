# ====== Topología (IPs/puertos expuestos) ======
BACKEND_VM_IP=127.0.0.1
MICROSERVICES_VM_IP=127.0.0.1
BACKEND_HTTP_PORT=8080
PGPORT=5432
REDIS_PORT=6379
INFLUXDB_PORT=8086

# ====== Postgres superuser (para init/seed) ======
PGSUPER=postgres
PGSUPER_PASS=postgres123
PGHOST=127.0.0.1

# ====== App DB/Role ======
DBNAME=heartguard
DBUSER=heartguard_app
DBPASS=dev_change_me
DATABASE_URL=postgres://heartguard_app:dev_change_me@127.0.0.1:5432/heartguard?sslmode=disable

# ====== Backend ======
ENV=dev
HTTP_ADDR=:8080

# ====== Auth compartido entre servicios ======
INTERNAL_SERVICE_KEY=dev_internal_key
AI_MODEL_ID=988e1fee-e18e-4eb9-9b9d-72ae7d48d8bc

# ====== Cookies (Secure flag) ======
# false = permite HTTP (desarrollo local)
# true = requiere HTTPS (producción)
SECURE_COOKIES=false

# ====== Auth ======
JWT_SECRET=dev_jwt_secret_change_me
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=720h

# ====== Redis ======
REDIS_URL=redis://127.0.0.1:6379/0
RATE_LIMIT_RPS=10
RATE_LIMIT_BURST=20

# ====== InfluxDB ======
INFLUXDB_URL=http://127.0.0.1:8086
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=influxdb123
INFLUXDB_TOKEN=heartguard-dev-token-change-me
INFLUXDB_ORG=heartguard
INFLUXDB_BUCKET=timeseries

# ====== Media service (DigitalOcean Spaces) ======
DO_SPACES_ID=DO00EXAMPLEID
DO_SPACES_KEY=DO00EXAMPLESECRET
DO_ORIGIN=https://heartguard-bucket.atl1.digitaloceanspaces.com/

# ====== Gateway ======
GATEWAY_SECRET=change-me-in-production