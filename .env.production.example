# HeartGuard backend (Docker) production defaults
ENV=prod
HTTP_ADDR=:8080
HTTP_PORT=8080

PGSUPER=postgres
PGSUPER_PASS=postgres123
PGHOST=postgres
PGPORT=5432
DBNAME=heartguard
DBUSER=heartguard_app
DBPASS=dev_change_me
DATABASE_URL=postgres://heartguard_app:dev_change_me@postgres:5432/heartguard?sslmode=disable

JWT_SECRET=replace_with_a_32_byte_secret
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=720h
REDIS_URL=redis://redis:6379/0
RATE_LIMIT_RPS=10
RATE_LIMIT_BURST=20
SECURE_COOKIES=true
LOOPBACK_ALLOW_CIDRS=172.16.0.0/12

# HTTPS / reverse proxy
ADMIN_HOST=admin.heartguard.live
TLS_EMAIL=jorge.serangelli@udem.edu
